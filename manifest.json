{
  "manifest_version": 3,
  "name": "Twitch Clip Editor",
  "version": "2.1.0",
  "description": "Professional clip editor for Twitch streams with draggable interface and download capabilities",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://clips.twitch.tv/*",
    "https://*.twitchcdn.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*",
        "https://clips.twitch.tv/*"
      ],
      "js": [
        "src/shared/constants.js",
        "src/shared/utils.js",
        "src/components/editor/editorConstants.js",
        "src/services/videoProcessor.js",
        "src/features/clipDetector.js",
        "src/features/twitchPopupManager.js",
        "src/services/videoDownloader.js",
        "src/components/editor/selectionController.js",
        "src/components/editor/frameRecorder.js",
        "src/components/editor/previewRenderer.js",
        "src/components/editor/videoEditor.js",
        "src/components/popup/popup.js",
        "src/components/popup/popupManagerV2.js",
        "src/content/content.js"
      ],
      "css": [
        "src/components/popup/popup.css",
        "src/components/popup/popupEnhanced.css",
        "src/components/editor/videoEditor.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "unlimitedStorage",
    "webRequest"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.mp4", "src/components/editor/videoEditor.html", "src/components/popup/popup.html"],
      "matches": ["https://www.twitch.tv/*", "https://clips.twitch.tv/*", "https://*.twitchcdn.net/*"]
    }
  ]
}